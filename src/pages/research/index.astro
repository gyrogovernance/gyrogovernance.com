---
import { Card, Icon, Label } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import Section from '@/components/home/Section.astro'

const researchAreas = [
  {
    title: 'AI Governance Frameworks',
    description: 'Developing comprehensive frameworks for responsible AI development and deployment',
    focus: ['Ethical AI principles', 'Policy development', 'Regulatory compliance'],
    status: 'Active'
  },
  {
    title: 'Transparency & Explainability',
    description: 'Creating tools and methodologies for AI system transparency and accountability',
    focus: ['Explainable AI', 'Audit trails', 'Decision documentation'],
    status: 'Active'
  },
  {
    title: 'Risk Assessment & Mitigation',
    description: 'Quantitative and qualitative methods for AI risk evaluation and management',
    focus: ['Risk modeling', 'Impact assessment', 'Mitigation strategies'],
    status: 'Active'
  },
  {
    title: 'AI Ethics & Bias',
    description: 'Research into fairness, bias detection, and ethical AI implementation',
    focus: ['Bias detection', 'Fairness metrics', 'Ethical guidelines'],
    status: 'Planning'
  }
]

const publications = [
  {
    title: 'AI Governance Best Practices: A Comprehensive Framework',
    authors: 'Gyro Governance Research Team',
    journal: 'Journal of AI Governance',
    year: '2024',
    link: '#'
  },
  {
    title: 'Transparency in AI Systems: Tools and Methodologies',
    authors: 'Gyro Governance Research Team',
    journal: 'AI Ethics Quarterly',
    year: '2024',
    link: '#'
  },
  {
    title: 'Risk Assessment Frameworks for Autonomous AI Systems',
    authors: 'Gyro Governance Research Team',
    journal: 'International Conference on AI Safety',
    year: '2023',
    link: '#'
  }
]

const collaborations = [
  {
    name: 'MIT AI Ethics Lab',
    type: 'Academic Partnership',
    description: 'Joint research on AI governance frameworks'
  },
  {
    name: 'Partnership on AI',
    type: 'Industry Collaboration',
    description: 'Developing industry standards for AI governance'
  },
  {
    name: 'AI Safety Research Center',
    type: 'Research Alliance',
    description: 'Collaborative work on AI safety and governance'
  }
]
---

<PageLayout meta={{ title: 'Research', description: 'Our research initiatives in AI governance and development' }}>
  <main class='flex w-full flex-col items-center'>
    <div class='animate mb-10 flex flex-col items-center gap-y-7' id='content-header'>
      <div class='flex flex-col items-center gap-y-4'>
        <h1 class='text-4xl font-bold'>Research & Development</h1>
        <p class='text-center text-lg text-muted-foreground max-w-2xl'>
          Advancing AI governance through cutting-edge research and innovative development solutions
        </p>
      </div>
    </div>

    <div id='content' class='animate flex flex-col gap-y-10 md:w-4/5 lg:w-5/6'>
      <Section title='Research Areas'>
        <div class='grid grid-cols-1 gap-6 md:grid-cols-2'>
          {researchAreas.map((area) => (
            <Card
              heading={area.title}
              subheading={area.description}
              date={area.status}
              class='h-full'
            >
              <div class='mt-4'>
                <h4 class='font-semibold mb-2'>Focus Areas:</h4>
                <ul class='list-disc list-inside space-y-1 text-muted-foreground'>
                  {area.focus.map((focus) => (
                    <li>{focus}</li>
                  ))}
                </ul>
                <div class='mt-4 flex items-center gap-2'>
                  <Label 
                    title={area.status} 
                    class={area.status === 'Active' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}
                  />
                </div>
              </div>
            </Card>
          ))}
        </div>
      </Section>

      <Section title='Recent Publications'>
        <div class='space-y-4'>
          {publications.map((pub) => (
            <Card
              as='a'
              heading={pub.title}
              subheading={`${pub.authors} • ${pub.journal} • ${pub.year}`}
              href={pub.link}
              class='hover:shadow-md transition-shadow'
            />
          ))}
        </div>
        <div class='mt-6'>
          <a 
            href='/blog' 
            class='inline-flex items-center gap-2 text-primary hover:text-primary/80 font-medium'
          >
            View all publications
            <Icon name='link' class='size-4' />
          </a>
        </div>
      </Section>

      <Section title='Collaborations'>
        <div class='grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3'>
          {collaborations.map((collab) => (
            <Card
              heading={collab.name}
              subheading={collab.type}
              class='h-full'
            >
              <p class='text-muted-foreground mt-2'>{collab.description}</p>
            </Card>
          ))}
        </div>
      </Section>

      <Section title='Research Methodology'>
        <div class='prose max-w-none'>
          <p class='text-muted-foreground mb-4'>
            Our research approach combines theoretical analysis with practical implementation, 
            ensuring that our findings are both academically rigorous and practically applicable.
          </p>
          <div class='grid grid-cols-1 md:grid-cols-2 gap-6'>
            <div>
              <h3 class='font-semibold mb-2'>Theoretical Foundation</h3>
              <ul class='list-disc list-inside space-y-1 text-muted-foreground'>
                <li>Literature review and analysis</li>
                <li>Framework development</li>
                <li>Model validation</li>
                <li>Peer review process</li>
              </ul>
            </div>
            <div>
              <h3 class='font-semibold mb-2'>Practical Implementation</h3>
              <ul class='list-disc list-inside space-y-1 text-muted-foreground'>
                <li>Case study analysis</li>
                <li>Tool development</li>
                <li>Industry partnerships</li>
                <li>Real-world testing</li>
              </ul>
            </div>
          </div>
        </div>
      </Section>

      <Section title='Get Involved'>
        <div class='text-center'>
          <p class='text-muted-foreground mb-6'>
            Interested in collaborating with us or learning more about our research?
          </p>
          <div class='flex flex-col sm:flex-row gap-4 justify-center'>
            <a 
              href='/about' 
              class='inline-flex items-center justify-center px-6 py-3 border border-primary text-primary rounded-lg hover:bg-primary hover:text-white transition-colors'
            >
              Contact Us
            </a>
            <a 
              href='/blog' 
              class='inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors'
            >
              Read Our Blog
            </a>
          </div>
        </div>
      </Section>
    </div>
  </main>
</PageLayout>
